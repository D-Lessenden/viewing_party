<h1><%= "Welcome #{current_user.username}!" %></h1>
<%=  button_to 'Discover Movies', "/discover", method: :get %>

<h3><%= "Friends" %></h3>
<%=  button_to 'Add Friend' %>
<% if current_user.followers.count == 0 %>
  <%= "You currently have no friends." %>
<% else %>
  <%# current_user.followers.each do |follower| %>
  <%# follower %>
<% end %>

<h3><%= link_to "Viewing Parties", "/parties" %></h3>
<%= link_to 'Create New Party!', '/parties/new' %>

<% @user.parties.each do |party| %>
  <%= "Movie Title: #{party.movie_title}" %> <br>
  <%= "Duration: #{party.duration} minutes" %> <br>
  <%= "Date: #{party.date}" %> <br>
  <%= "Start Time: #{party.start_time}" %> <br>
<% end %>

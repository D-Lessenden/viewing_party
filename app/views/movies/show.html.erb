
<% button_to 'Create New Viewing Party' %>
<h1><%= @json[:original_title] %></h1>
<%=  button_to 'Create Viewing Party' %>
<p>Vote Average:<%= @json[:vote_average] %></p>
<%= "Runtime: #{@json[:runtime]} minutes" %>
<p>Genre:</p>
<% @json[:genres].each do |genre| %>
  <p><%= genre[:name] %></p>
<% end  %>
<p>Summary: <%= @json[:overview] %></p>
<%= "Cast" %>
<% @cast[:cast].each do |character| %>
<p><%= "#{character[:character]} played by #{character[:name]}" %></p>
<% end %>




<p> Number of Votes: <%= @json[:vote_count] %></p>
<h2><%= "REVIEWS" %></h2>
<% @reviews[:results].each do |review| %>
  <p><%= "Reviewer: #{review[:author]}" %></p>
  <p><%= review[:content] %></p>
<% end %>




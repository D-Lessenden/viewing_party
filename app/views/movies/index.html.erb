<%# movies %>
<h1><%= "Top 40 Movies" %></h1>
<h3>Find a Movie Here</h3>
<%= form_tag('/movies/search', method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search by Movie Title") %>
<% end %>
<% @json1[:results].each do |film| %>
  <p><%= film[:original_title]%> <%= "Voter Average: #{film[:vote_average]}" %></p>
<% end %>
<% @json2[:results].each do |film| %>
<p><%= film[:original_title] %> <%= "Voter Average: #{film[:vote_average]}" %></p>
<% end %>



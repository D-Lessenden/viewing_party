<h3>Find a Different Movie Here</h3>
<%= form_tag('/movies/search', method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search by Movie Title") %>
<% end %>
<% if @films.count == 0 %>
  <h2><%= "Sorry, no results match your search." %></h2>
<% else %>
  <h2><%= "Search Results for #{params[:search]}" %></h2>
    <% @films.each do |film| %>
      <p><%= film[:original_title] %> <%= "Voter Average: #{film[:vote_average]}" %></p>
    <% end %>
<% end %>
